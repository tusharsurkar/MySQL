CREATE TABLE if not EXISTS employee
(
    id INT,
    emp_name VARCHAR(50),
    age INT,
    salary DOUBLE,
    joining_year DATE,
    city VARCHAR(50)
);

INSERT INTO employee VALUES(1, "Tushar", 32, 9000, "2023-01-01", "Nagpur");
